.page-body{
    display:flex;
    flex:1;
    flex-direction:column;
}
.item{
    display:flex;
    padding:20rpx 40rpx;
    border-bottom:2rpx solid #eee;
}
.item .poster{
    width:128rpx;
    height:128rpx;
    margin-right:30rpx;
    justify-content:flex-start;
}
.item .meta{
    flex:1;
    justify-content:center;
}
.item .title{
    display:block;
    font-size:32rpx;
    margin-top:6rpx;
}
.item .sub-title{
    display:block;
    font-size:28rpx;
    color:#c0c0c0;
    margin-top:12rpx;
}
.item .artists{
    font-size:26rpx;
    color:#999;
    margin-top:15rpx;
}
.item .rating{
    justify-content:flex-end;
    align-self:center;
    font-size:28rpx;
    font-weight:bold;
    color:#ec3030;
}

.movie-tag-item{
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}